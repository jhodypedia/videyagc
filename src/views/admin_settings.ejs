<!doctype html>
<html>
<head><%- include("partials/head", { settings, title: "Settings" }) %></head>
<body class="min-h-screen bg-[#05070b] text-white">
  <%- include("partials/navbar", { settings }) %>

  <div class="max-w-3xl mx-auto px-4 py-6">
    <div class="flex gap-2 text-sm">
      <a class="btn" href="<%= ADMIN_PATH %>/">Dashboard</a>
      <a class="btn" href="<%= ADMIN_PATH %>/ads">Ads</a>
    </div>

    <form method="post" class="mt-4 rounded-2xl border border-white/10 bg-white/5 p-5">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div>
        <label class="text-xs text-white/60">Site name</label>
        <input name="site_name" class="inp" value="<%= settings.site_name || "" %>">
      </div>
      <div class="mt-3">
        <label class="text-xs text-white/60">Logo text</label>
        <input name="logo_text" class="inp" value="<%= settings.logo_text || "" %>">
      </div>
      <div class="mt-3">
        <label class="text-xs text-white/60">Brand color</label>
        <input name="brand_color" class="inp" value="<%= settings.brand_color || "" %>">
      </div>

      <button class="btn mt-4">Save</button>
    </form>
  </div>

  <%- include("partials/footer", { settings }) %>
</body>
</html>
