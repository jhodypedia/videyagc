<!doctype html>
<html>
<head><%- include("partials/head", { settings, title: "Admin Login" }) %></head>
<body class="min-h-screen bg-[#05070b] text-white flex items-center justify-center p-4">
  <form method="post" class="w-full max-w-sm rounded-2xl border border-white/10 bg-white/5 p-5">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="font-extrabold text-xl">Admin</div>
    <div class="text-xs text-white/50 mt-1">Hidden panel access</div>

    <% if (error) { %>
      <div class="mt-3 text-sm text-red-300 bg-red-500/10 border border-red-500/20 rounded px-3 py-2"><%= error %></div>
    <% } %>

    <div class="mt-4">
      <label class="text-xs text-white/60">Username</label>
      <input name="username" class="inp" autocomplete="username" required>
    </div>
    <div class="mt-3">
      <label class="text-xs text-white/60">Password</label>
      <input name="password" type="password" class="inp" autocomplete="current-password" required>
    </div>

    <button class="btn w-full mt-4">Login</button>
  </form>
</body>
</html>
